---
// Import the necessary dependencies
import { Image } from "astro:assets";
import ImageSlideshow from "@/components/ui/blocks/ImageSlideshow";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";

interface BtnConfig {
  title?: string;
  url?: string;
  openInNewTab?: boolean;
}

const DEFAULTS: Pick<BtnConfig, "title" | "openInNewTab"> = {
  title: "Learn More",
  openInNewTab: false,
};

function normalizeBtnConfig(
  config: BtnConfig | undefined
): (BtnConfig & { url: string }) | null {
  if (!config || typeof config !== "object" || !config.url) return null;
  return { ...DEFAULTS, ...config, url: config.url };
}

const {
  title,
  subTitle,
  primaryBtn,
  secondaryBtn,
  src,
  alt,
} = Astro.props;

const primaryBtnConfig = normalizeBtnConfig(primaryBtn);
const secondaryBtnConfig = normalizeBtnConfig(secondaryBtn);

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
  primaryBtn?: BtnConfig;
  secondaryBtn?: BtnConfig;
  withReview?: boolean;
  avatars?: Array<string>;
  starCount?: number;
  rating?: string;
  reviews?: string;
  src?: any;
  alt?: string;
}
---

<!-- Defining a grid container that holds all the content -->
<section
  class="mx-auto grid max-w-[85rem] gap-4 px-4 py-14 sm:px-6 md:grid-cols-2 md:items-center md:gap-8 lg:px-8 2xl:max-w-full"
>
  <!-- Title and description -->
  <div>
    <!-- Each h1 and p tag renders a portion of the title and subTitle defined above -->
    <h1
      class="block text-balance text-3xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 sm:text-4xl lg:text-6xl lg:leading-tight"
    >
      <!-- About Fragment: https://docs.astro.build/en/basics/astro-syntax/#fragments -->
      <Fragment set:html={title} />
    </h1>
    {subTitle &&
    <p
      class="mt-3 text-pretty text-lg leading-relaxed text-neutral-700 dark:text-neutral-400 lg:w-4/5"
    >
      {subTitle}
    </p>
  }
    <!-- Action Button Section: This section includes two CTAs with their own styles and URL -->
    <div class="mt-7 grid w-full gap-3 sm:inline-flex">
      {primaryBtnConfig && (
      <PrimaryCTA
        title={primaryBtnConfig.title}
        url={primaryBtnConfig.url}
        openInNewTab={primaryBtnConfig.openInNewTab}
      />
      )}
      {secondaryBtnConfig && (
      <SecondaryCTA
        title={secondaryBtnConfig.title}
        url={secondaryBtnConfig.url}
        openInNewTab={secondaryBtnConfig.openInNewTab}
      />
      )}
    </div>

  </div>
  <!-- Hero Image Section -->
  <div class="flex w-full">
      <div class="top-12 overflow-hidden">
      {
        src && <ImageSlideshow client:visible images={src} />
      }
    </div>
  </div>
</section>

<script>

</script>
